# The MySQL server
[mysqld]
datadir = /home/mysql/data
socket = /home/mysql/status/mysql.sock
pid-file = /home/mysql/status/mysql.pid

bind-address = 10.173.17.162
port = 3306
user = elex
skip-external-locking
skip-slave-start
skip-name-resolve

character_set_server = utf8mb4
collation_server = utf8mb4_bin
init-connect = 'SET NAMES utf8mb4'

key_buffer_size = 16M
myisam-recover-options = FORCE,BACKUP

back_log = 500
default-storage-engine = InnoDB
explicit_defaults_for_timestamp = 1
join_buffer_size = 16M
max_allowed_packet = 32M
max_heap_table_size = 256M
metadata_locks_cache_size = 2048
metadata_locks_hash_instances = 32
open_files_limit = 65535
performance_schema = 0
read_buffer_size = 1M
read_rnd_buffer_size = 2M
sort_buffer_size = 2M
table_definition_cache = 2000
table_open_cache = 2000
table_open_cache_instances = 8
thread_cache_size = 256
tmp_table_size = 256M
transaction_isolation = REPEATABLE-READ

max_connect_errors = 10000
max_connections = 2000
max_user_connections = 1990

query_cache_size = 0
query_cache_type = 0

log_error = /home/mysql/log/mysql-err.log
log_warnings = 1
long_query_time = 1
slow_query_log = 1
slow_query_log_file = /home/mysql/log/mysql-slow.log

binlog_cache_size = 1M
#binlog_format = ROW
binlog_gtid_simple_recovery = 1
binlog_row_image = minimal
# enforce_gtid_consistency = 1
# gtid_mode = on
log-bin = log-bin
log_bin_trust_function_creators = 1
# log_slave_updates = 1
relay_log = log-relay
relay_log_recovery = 1
slave_compressed_protocol = 1
slave_parallel_workers = 0
expire_logs_days = 7
sync_binlog = 5

server-id = 162

innodb_adaptive_hash_index = 1
innodb_buffer_pool_instances = 1
innodb_buffer_pool_size = 25653M
innodb_change_buffering = all
innodb_data_file_path = ibdata1:50M:autoextend
innodb_data_home_dir = /home/mysql/data
innodb_doublewrite = 1
innodb_file_format = Barracuda
innodb_file_format_check = 1
innodb_file_format_max = Barracuda
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_flush_neighbors = 1
innodb_io_capacity = 200
innodb_large_prefix = 1
innodb_log_buffer_size = 32M
innodb_log_file_size = 1G
innodb_log_files_in_group = 2
innodb_log_group_home_dir = /home/mysql/data
innodb_online_alter_log_max_size = 2G
innodb_open_files = 2000
innodb_print_all_deadlocks = 1
innodb_purge_batch_size = 300
innodb_purge_threads = 1
innodb_read_io_threads = 8
innodb_support_xa = 1
innodb_thread_concurrency = 0
innodb_write_io_threads = 8

[client]
#default-character-set = utf8mb4
#default-character-set = utf8
port = 3306
socket = /home/mysql/status/mysql.sock

[mysql]
default-character-set = utf8mb4
no-auto-rehash
prompt = (\\u@\\h) [\\d]>\\_

[xtrabackup]
default-character-set = utf8
