# Percona Server template configuration

[client]
socket=/home/mysql/status/mysql.sock
default-character-set = utf8mb4
port = 3306

[mysql]
default-character-set = utf8mb4
auto-rehash
prompt = (\\u@\\h) [\\d]>\\_

[mysqld]
bind-address = 10.173.144.15
port = 3306
server-id = 50001
datadir=/home/mysql/data
socket=/home/mysql/status/mysql.sock
log-error=/home/mysql/log/mysqld.log
pid-file=/home/mysql/status/mysqld.pid
log-bin
log_slave_updates
expire_logs_days=7
user = elex
skip-external-locking
skip-name-resolve
skip-slave-start

# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

back_log = 500
default-storage-engine = InnoDB
explicit_defaults_for_timestamp = 1
join_buffer_size = 1M
log_timestamps = system
max_allowed_packet = 128M
max_heap_table_size = 256M
open_files_limit = 65535
performance_schema = 0
read_buffer_size = 512K
read_rnd_buffer_size = 1M
show_compatibility_56 = 1
sort_buffer_size = 1M
sql_mode = "STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER"
table_definition_cache = 2000
table_open_cache = 2000
thread_cache_size = 256
thread_handling = pool-of-threads
thread_pool_oversubscribe = 3
thread_pool_size = 16
thread_pool_stall_limit = 10
tmp_table_size = 128M
transaction_isolation = REPEATABLE-READ 
userstat = 1

character_set_server = utf8mb4
collation_server = utf8mb4_bin
#init-connect = 'SET NAMES utf8mb4'

max_connect_errors = 10000
max_connections = 4000
max_user_connections = 3990

query_cache_size = 0
query_cache_type = 0

log_slow_admin_statements = 1
log_slow_slave_statements = 1
long_query_time = 0.5
slow_query_log = 1
slow_query_log_file = /home/mysql/log/mysql-slow.log

binlog_cache_size = 1M
binlog_format = ROW
binlog_gtid_simple_recovery = 1
enforce_gtid_consistency = 1
expire_logs_days = 14
gtid_mode = on
log-bin = log-bin
log_bin_trust_function_creators = 1
log_slave_updates = 0
master_info_repository = TABLE
relay_log = log-relay
relay_log_info_repository = TABLE
relay_log_recovery = 1
skip_slave_start = 1
slave-parallel-type = LOGICAL_CLOCK
slave-parallel-workers = 16
slave_compressed_protocol = 1
sync_binlog = 1

innodb_autoextend_increment = 64
innodb_buffer_pool_dump_at_shutdown = 0
innodb_buffer_pool_instances = 1
innodb_buffer_pool_load_at_startup = 0
innodb_buffer_pool_size= 25G
innodb_concurrency_tickets = 5000
innodb_data_file_path = ibdata1:10M:autoextend
innodb_doublewrite = 1
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_io_capacity = 2000
innodb_large_prefix = 1
innodb_log_buffer_size = 32M
innodb_log_file_size = 1G
innodb_log_files_in_group = 2
innodb_max_dirty_pages_pct = 75
innodb_max_undo_log_size = 2G
innodb_old_blocks_time = 1000
innodb_online_alter_log_max_size = 2G
innodb_open_files = 2000
innodb_page_cleaners = 4
innodb_print_all_deadlocks = 1
innodb_purge_batch_size = 300
innodb_purge_threads = 4
innodb_read_io_threads = 8
innodb_sort_buffer_size = 64M
innodb_stats_on_metadata = 0
innodb_thread_concurrency = 256
innodb_undo_log_truncate = 1
innodb_undo_logs = 128
#innodb_undo_tablespaces = 2
innodb_write_io_threads = 8
